// LaterPay purchase button

// rendered as plain link ----------------------------------------------------------------------------------------------
.lp_purchaseLink
    display                         block                                                           !important
    font-family                     Arial, sans-serif                                               !important
    font-weight                     400                                                             !important
    margin                          1em 0 0                                                         !important
    position                        relative                                                        !important
    text-decoration                 none                                                            !important
    z-index                         $zindex-elevated_1                                              !important

    /**
     * LaterPay logo (rendered in pseudo element from icon font)
     *
     * 1. Nullify line-height to avoid icon overlapping other elements
     */
    &:before
        font-size                   2em                                                             !important
        left                        -0.25em                                                         !important
        line-height                 0 /* 1 */                                                       !important
        margin                      0 -0.5em 0 0                                                    !important
        position                    relative                                                        !important
        top                         0.31em                                                          !important

    // currency ISO code
    small
        bottom                      0.45em                                                          !important
        font-size                   0.6em                                                           !important
        padding                     0 1px 0 2px                                                     !important
        position                    relative                                                        !important


// rendered as button --------------------------------------------------------------------------------------------------
.lp_purchaseLink.lp_button
    linear-gradient                 $background-laterpay, 0%, $background-laterpay-darker, 100%     !important
    border-color                    hsl(166, 64%, 31%) hsl(166, 64%, 35%)                           !important
    border-radius                   5px                                                             !important
    border                          1px solid hsl(166, 64%, 35%)                                    !important
    border-width                    0 1px 2px 0                                                     !important
    color                           $text-inverse                                                   !important
    cursor                          pointer                                                         !important
    float                           right                                                           !important
    font-size                       28px                                                            !important
    line-height                     1.1                                                             !important
    margin                          0                                                               !important
    padding                         0.2em 0.2em 0.1em 0                                             !important
    text-shadow                     0 -1px 0 hsl(166, 65%, 38%)                                     !important
    white-space                     nowrap                                                          !important

    /**
     * LaterPay logo (rendered in pseudo element from icon font)
     *
     * 1. Set font-size in pixels, because IE gets confused with em here
     * 2. Nullify line-height to avoid icon overlapping other elements
     */
    &:before
        font-size                   49px /* 1 */                                                    !important
        left                        -3px                                                            !important
        line-height                 0 /* 2 */                                                       !important
        margin                      0 -0.2em 0 0                                                    !important
        position                    relative                                                        !important

    &:hover,
    &:focus,
    &:active
        linear-gradient             $background-laterpay-highlight, 0%, $background-laterpay, 100%  !important
        color                       $text-inverse                                                   !important
        text-decoration             none                                                            !important

    &:focus,
    &:active
        border-top-color            transparent                                                     !important
        border-width                2px 1px 0 0                                                     !important

    small
        bottom                      0.7em                                                           !important
        color                       $text-inverse                                                   !important
        font-size                   0.5em                                                           !important
        padding-left                4px                                                             !important
        position                    relative                                                        !important
        text-decoration             none                                                            !important


// Responsiveness ------------------------------------------------------------------------------------------------------
@media (max-width:567px)
    .lp_button
        margin-left                 2.75em                                                          !important
        margin-top                  0.5em                                                           !important
