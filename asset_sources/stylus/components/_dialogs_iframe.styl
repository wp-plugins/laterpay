// LaterPay dialogs iframe

.laterpay-overlay
    background-color                hsl(0, 0%, 0%)                              !important
    height                          100%                                        !important
    left                            0                                           !important
    opacity                         0.89                                        !important
    position                        fixed                                       !important
    top                             0                                           !important
    width                           100%                                        !important
    z-index                         $zindex-topmost_1                           !important

.laterpay-iframe
    height                          100%                                        !important
    left                            0                                           !important
    padding-top                     $fs-2                                       !important
    position                        fixed                                       !important
    top                             0                                           !important
    width                           100%                                        !important
    z-index                         $zindex-topmost_2                           !important

    iframe
        border                      0 none

    .laterpay-dialog-close-button
        color                       $text                                       !important
        padding                     1em 1em 1em 2em                             !important
        position                    absolute                                    !important
        right                       0                                           !important
        text-decoration             none                                        !important
        top                         0                                           !important

        &:hover
            color                   hsl(0, 0%, 60%)                             !important
            text-decoration         none                                        !important

    .laterpay-dialog-close-button[data-icon]
        &:before
            background-color        $text                                       !important
            border-radius           1em                                         !important
            color                   hsl(0, 0%, 0%)                              !important
            margin-right            0.4em                                       !important
            padding                 0.1em                                       !important
            position                relative                                    !important
            top                     0.15em                                      !important

        &:hover:before
            background-color        hsl(0, 0%, 60%)


// Responsiveness ------------------------------------------------------------------------------------------------------
@media (max-width:567px)
    .laterpay-iframe .laterpay-dialog-close-button
        padding                     0.2em 0.5em 1em 2em                         !important
