// Loaded on options page for LaterPay plugin

@charset "UTF-8";

@import 'objects/_variables';


h3 {
    margin: round(4 * $fs-1) 0 $fs-1;

    &:first-of-type {
        margin-top: $fs-1;
    }
}

.form-table {
    margin-top: 0;
}
.form-table th {
    font-weight: normal;
    padding-top: $fs-1;
    padding-bottom: $fs-05;
}
.form-table td {
    padding-top: $fs-05;
    padding-bottom: 0;
}

.regular-text.lp_numberInput {
    text-align: right;
    width: 4em;
}

.lp_appendedText {
    color: $text-lighter;
    padding-left: $fs-05;
}

p.submit {
    margin-top: round(4 * $fs-1);
}

// hide the individual category checkboxes, if access was granted to 'all' or 'no' categories
.lp_global-access:checked ~ .lp_category-access-input:not(.lp_global-access),
.lp_global-access:checked ~ .lp_category-access-label:not(.lp_global-access) {
    display: none;
}

.lp_category-access-label {
    line-height: 1.8;
    margin-right: 1em;
}
