.lp_page


    // headings --------------------------------------------------------------------------------------------------------
    h2,
    h3
        font-weight     400
        margin          1rem 0 0.5rem

    h2
        font-size       $fs-125

    h3
        font-size       $fs-1
        margin          0


    // links -----------------------------------------------------------------------------------------------------------
    a
        text-decoration none

        // remove dotted outline and box shadows from links
        &:focus,
        &:active,
        &:visited
            box-shadow  none
            outline     0 none


    // lists -----------------------------------------------------------------------------------------------------------
    ul,
    li
        list-style      none
        margin          0
        padding         0


    // explanatory texts -----------------------------------------------------------------------------------------------
    dfn
        color           hsl(0, 0%, 60%)
        font-style      italic


    // svg (used by icon fonts) ----------------------------------------------------------------------------------------
    svg
        overflow        hidden
