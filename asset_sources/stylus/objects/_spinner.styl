/* SVG loading indicator */
.lp_loadingIndicator
    background-image    url(../img/spinner.svg)
    background-size     contain
    height              2rem
    margin              20px auto
    opacity             0.7
    position            relative
    width               2rem
    animation           rotate 1.2s infinite steps(12)

@keyframes rotate {
    from {
        transform       rotate(0deg)
    } to {
        transform       rotate(360deg)
    }
}
